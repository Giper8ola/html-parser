{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "node_modules/@types/jest/index.d.ts"
  ]
}


